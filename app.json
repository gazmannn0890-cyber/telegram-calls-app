{
  "expo": {
    "name": "Telegram Calls",
    "slug": "telegram-calls",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.telegram.calls",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to microphone to make calls",
        "NSCameraUsageDescription": "This app needs access to camera to make video calls",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to save videos"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a0a"
      },
      "package": "com.telegram.calls",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "plugins": [
      "expo-camera",
      "expo-av",
      "expo-blur"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}